<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/externalCircle"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/ic_timer_anel_externo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/timerProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminate="false"
        android:max="100"
        android:progressDrawable="@drawable/ic_timer_riscos"
        app:layout_constraintBottom_toBottomOf="@id/externalCircle"
        app:layout_constraintEnd_toEndOf="@id/externalCircle"
        app:layout_constraintStart_toStartOf="@id/externalCircle"
        app:layout_constraintTop_toTopOf="@id/externalCircle" />

    <ImageView
        android:id="@+id/pointer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_timer_ponteiro"
        app:layout_constraintBottom_toBottomOf="@id/timerProgressBar"
        app:layout_constraintEnd_toEndOf="@id/timerProgressBar"
        app:layout_constraintStart_toStartOf="@id/timerProgressBar"
        app:layout_constraintTop_toTopOf="@id/timerProgressBar" />

</android.support.constraint.ConstraintLayout>
